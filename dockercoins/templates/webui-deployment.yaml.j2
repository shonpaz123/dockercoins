kind: Deployment
apiVersion: apps/v1
metadata:
  name: webui
spec:
  replicas: {{ webui_replicas|default(size) }}
  selector:
    matchLabels:    
      app: webui
  template:    
    metadata:
      labels:  
        app: webui
    spec:
      containers:
        - name: webui
          image: dockercoins/webui:v0.2
          ports:
            - containerPort: 80
              protocol: TCP

